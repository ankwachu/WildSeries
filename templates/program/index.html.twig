{% extends 'base.html.twig' %}

{% block title %}Index des séries{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="d-flex">
                <h1>Index des séries</h1>
                <div class="pl-5 pt-2">
                    <a class="btn btn-outline-success" href="{{ path('program_new') }}">Ajouter une série</a>
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th style="width: 15%">Titre</th>
                    <th>Résumé</th>
                    <th class="">Poster</th>
                    <th class="">actions</th>
                </tr>
                </thead>
                <tbody>
                {% for program in programs %}
                    <tr>
                        <td>{{ program.title }}</td>
                        <td>{{ program.summary }}</td>
                        <td><img class="align-self-start mr-3" src="{{ program.poster }}"
                                 alt="{{ program.title }} poster">
                        </td>
                        <td>
                            <div class="d-flex">
                                <a class="btn btn-outline-secondary mr-3"
                                   href="{{ path('program_show', {'id': program.id}) }}">Aperçu</a>
                                <a class="btn btn-success"
                                   href="{{ path('program_edit', {'id': program.id}) }}">Éditer</a>

                   </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('program_new') }}">Create new</a>
{% endblock %}
