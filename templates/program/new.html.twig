{% extends 'base.html.twig' %}

{% block title %}New Program{% endblock %}

{% block body %}
<div class="container-fluid p-5">
<h1>Ajouter une nouvelle série</h1>
    <div class="col-lg-8 m-0 jumbotron">
        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.summary) }}
        {{ form_row(form.poster) }}
        {{ form_row(form.category) }}
        {{ form_row(form.actors) }}
        <button class="btn btn-primary mt-2">Ajouter</button>
        {{ form_end(form) }}
    </div>
    <a class="btn btn-outline-secondary" href="{{ path('program_index') }}">Retour à l'index des séries</a>
</div>
{% endblock %}
