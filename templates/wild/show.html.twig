{% extends 'base.html.twig' %}

{% block title %}{{ program.slug }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.slug }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.slug }}</h1>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-success" href="{{ path('program_edit', { 'slug': program.slug} ) }}">Éditer</a>
            {%endif%}
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            {% for season in seasons %}
                <a href="{{ path('show_season', { 'id': season.id }) }}">Saison {{ season.number }}</a>
                <br/>
            {% endfor %}
            <strong>Acteur :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li> <a href="{{ path('show_actor', { 'slug': actor.slug }) }}">{{ actor.name }} </a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
            <a href="{{ path('wild_index') }}">
                Retour à l'accueil
            </a>
        </div>
    </div>
{% endblock %}
