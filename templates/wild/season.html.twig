{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>Categorie : {{ program.category.name }}</p>
            <h2>Saison {{ season.number }}</h2>
            {% for episode in episodes %}
                <a href="{{ path('wild_episode', {'slug': episode.slug}) }}"><h3>Episode {{ episode.number }} : {{ episode.title }}</h3></a>
                <br/>
            {% endfor %}
            <a class="btn btn-outline-success" href="{{ path('wild_index') }}">
                Retour Ã  l'accueil
            </a>
        </div>
    </div>
{% endblock %}
