{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="d-flex">
                <h1>Index des épisodes</h1>
                <div class="pl-5 pt-2">
                    <a class="btn btn-outline-success" href="{{ path('episode_new') }}">Ajouter un épisode</a>
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Number</th>
                    <th>Synopsis</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for episode in episodes %}
                    <tr>
                        <td>{{ episode.title }}</td>
                        <td>{{ episode.number }}</td>
                        <td>{{ episode.synopsis }}</td>
                        <td>
                            <a href="{{ path('episode_show', {'id': episode.id}) }}">show</a>
                            <a href="{{ path('episode_edit', {'id': episode.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
