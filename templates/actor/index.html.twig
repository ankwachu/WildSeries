{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="d-flex">
                <h1>Actor index</h1>
                <div class="pl-5 pt-2">
                    <a class="btn btn-outline-success" href="{{ path('actor_new') }}">Ajouter un acteur</a>
                </div>
            </div>
            <table class="table table-striped w-50">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for actor in actors %}
                    <tr>
                        <td>{{ actor.name }}</td>
                        <td>{{ actor.slug }}</td>
                        <td>
                            <div class="d-flex">
                            <a class="btn btn-outline-secondary mr-3" href="{{ path('actor_show', {'slug': actor.slug}) }}">Aperçu</a>
                            <a class="btn btn-success" href="{{ path('actor_edit', {'slug': actor.slug}) }}">Éditer</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
